<ul>
  <% @recipes.each do |r| %>
    <li>
      <form action='/recipe/<%= r.name %>' method='POST'>
        <label><%= r.name %></label>
        <input type='hidden' name='_method' value='DELETE'/>
        <button type='submit'>❌</button>
       </form>
    </li>
  <% end %>
</ul>

<a href="/new">Create a new recipe</a>
